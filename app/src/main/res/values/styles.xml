<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightBg</item>
        <item name="android:typeface">serif</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarTheme">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextColor">@color/colorIconPrimary</item>
        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->
        <item name="actionMenuTextColor">@color/colorIconPrimary</item>
    </style>
    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/material_grey_500</item>
        <item name="android:textColorHighlight">@color/material_grey_500</item>
        <item name="android:actionMenuTextColor">@color/material_grey_500</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorIconPrimary</item>
        <item name="android:textColorPrimary">@color/colorIconPrimary</item>
        <item name="android:textColorSecondary">@color/colorIconPrimary</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorIconPrimary</item>
        <item name="android:textColor">@color/colorIconPrimary</item>
    </style>











    <!--STYLES-->
    <style name="TABLAYOUT" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorIconPrimary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CARDVIEW" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="FAB" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorIconPrimary</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TOOLBAR">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="navigationIcon">@drawable/primary_icon_arrow_left</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="TOOLBAR_CANCEL">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="navigationIcon">@drawable/primary_icon_close</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:textSize">15sp</item>]
        <item name="fontPath">fonts/bold.ttf</item>
        <item name="android:textColor">@color/headerText</item>
    </style>
    <style name="BodyTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>]
        <item name="fontPath">fonts/regular.ttf</item>
        <item name="android:textColor">@color/bodyText</item>
    </style>


    <style name="PrimaryTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>]
        <item name="fontPath">fonts/regular.ttf</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="LightSmallTextStyle">
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>]
        <item name="fontPath">fonts/regular.ttf</item>
        <item name="android:textColor">@color/lightText</item>
    </style>
    <!--THEMES-->
    <style name="SWITCH" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>

    <style name="CHECKBOX" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlActivated">@color/white </item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/headerText</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/primaryText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="AlertDialog.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/highlight</item>
    </style>

    <style name="PrimaryButtonYellow" parent="AlertDialog.AppCompat.Light">
        <item name="colorButtonNormal">@color/highlight</item>
        <item name="colorControlHighlight">@color/orange</item>
    </style>

</resources>
